{
  "$schema": "https://biomejs.dev/schemas/1.6.2/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "linter": {
    "ignore": [
      ".next",
      "node_modules"
    ],
    "rules": {
      "recommended": true
    }
  }
}
